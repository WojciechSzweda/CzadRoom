{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "no-var-keyword": true,
        "semicolon": [
            true,
            "never"
        ],
        "max-line-length": [true, 120],
        "eofline": false,
        "curly": false
    }
}
