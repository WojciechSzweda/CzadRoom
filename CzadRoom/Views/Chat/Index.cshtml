@model IEnumerable<CzadRoom.ViewModels.RoomViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="CreateRoom">Create New</a>
</p>
<div id="dialogBox">
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RoomID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasPassword)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RoomID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.HasPassword) {
                        <span class="glyphicon glyphicon-lock" />
                    }
                </td>
                <td>
                    @Html.ActionLink("Join", "JoinRoom", new { roomID = item.RoomID})
                    @*@Html.ActionLink("Join", "Room", new { roomId = item.RoomID })*@
                </td>
            </tr>
        }
    </tbody>
</table>

